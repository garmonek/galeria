{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_wallpaper_delete'|trans({'%id%': wallpaper.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_wallpaper_delete'|trans({'%id%': wallpaper.id|default('')}) }}</h1>
    <h3>{{ 'caution_wallpaper_delete'|trans }}</h3>
    {{ form_start(form, { method: 'DELETE', action: url('wallpaper_delete', {id: wallpaper.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_delete'|trans }}" class="btn btn-danger" />
    </div>
    <div class="form-group float-sm-left">
        <a href="{{ url('wallpaper_show',{'id': wallpaper.id|default('')}) }}" class="btn btn-secondary">
            {{ 'action_back_to_show'|trans }}
        </a>
        <a href="{{ url('wallpaper_index') }}" class="btn btn-secondary">
            {{ 'action_back_to_list_wallpaper'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}
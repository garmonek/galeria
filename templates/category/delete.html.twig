{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_delete'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_category_delete'|trans({'%id%': category.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('category_delete', {id: category.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-danger" />
    </div>
    <div class="form-group float-sm-left">
        <a href="{{ url('category_show',{'id': category.id|default('')}) }}" class="btn btn-secondary">
            {{ 'action_back_to_show'|trans }}
        </a>
        <a href="{{ url('category_index') }}" class="btn btn-primary">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}